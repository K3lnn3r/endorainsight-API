{
  "openapi": "3.0.0",
  "info": {
    "title": "Endora Insight API",
    "description": "API para detecção de risco psicossocial com base em linguagem natural.",
    "version": "1.0.0"
  },
  "paths": {
    "/analyze-text": {
      "post": {
        "summary": "Analisar texto e retornar score de risco psicossocial",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "Estou me sentindo exausto e sem motivação para continuar."
                  },
                  "language": {
                    "type": "string",
                    "example": "pt-BR"
                  }
                },
                "required": [
                  "text"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resultado da análise",
            "content": {
              "application/json": {
                "example": {
                  "risk_score": 85,
                  "nivel": "alto",
                  "marcadores": [
                    "exausto",
                    "sem motivação"
                  ],
                  "explicacao": "Expressões compatíveis com sofrimento psíquico significativo."
                }
              }
            }
          }
        }
      }
    },
    "/get-score": {
      "get": {
        "summary": "Recuperar análise existente por ID",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Identificador único da análise"
          }
        ],
        "responses": {
          "200": {
            "description": "Análise recuperada com sucesso",
            "content": {
              "application/json": {
                "example": {
                  "id": "abc123",
                  "risk_score": 72,
                  "nivel": "moderado",
                  "marcadores": [
                    "cansaço",
                    "apatia"
                  ],
                  "explicacao": "Expressões compatíveis com sofrimento psíquico leve a moderado."
                }
              }
            }
          },
          "404": {
            "description": "Análise não encontrada"
          }
        }
      }
    }
  }
}